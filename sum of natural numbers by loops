import java.util.*;
public class Main
{
     int sum =0;
    public int sum(int n){
        for(int i=0;i<=n;i++){
          sum+=i;  
        }
          return sum;
        
        
    }
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    int n=sc.nextInt();
	    Main obj=new Main();
		System.out.println(obj.sum(n));
	}
}
